@using BugTracker2.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<body>
<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="intro-text">
                    <span class="name">Bug Tracker</span> 
                    <h3 class="landing-header"></h3> 
                    <h3>Welcome to my Bug Tracking application! Here you will find methods for submitting, updating, 
                               
                               and tracking issues or "bugs" in a real world application! Please feel free to navigate 
                               the site through the use of several demo logins, each representing the different roles 
                               of the platform.</h3>
                    <div class="col-md-12">
                        <div class="row">
                            </div>
                        </div>
                    </div>
              
                <div class="col-md-6 col-md-offset-2">
                    <div class="login-wrap">
                        <h4>Demo application as:</h4>

                        @using (Html.BeginForm("LoginGuestAdmin", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-block">Administrator</button>
                        }

                        @using (Html.BeginForm("LoginGuestProjectManager", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-block">ProjectManager</button>
                        }

                        @using (Html.BeginForm("LoginGuestDeveloper", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-block">Developer</button>
                        }

                        @using (Html.BeginForm("LoginGuestSubmitter", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-block">Submitter</button>
                        }

                    </div>
                </div>
                       @*</div>
                    </div>*@
                        <div class="col-md-12">
                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @*<h4>Use a local account to log in.</h4>*@

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <div class="checkbox">
                                                    @Html.CheckBoxFor(m => m.RememberMe)
                                                    @Html.LabelFor(m => m.RememberMe)
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-12">
                                                    <div id="loginbut">
                                                        <input type="submit" value="Log in" class="btn btn-default" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-offset-1 col-md-12">
                                                        <div class="login-password-buttons">
                                                            <p>
                                                                @Html.ActionLink("Register as a new user", "Register", null, new { @style = "color:white;" }) |
                                                                @Html.ActionLink("Forgot your password?", "ForgotPassword", null, new { @style = "color:white;" })
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                       </div>
                                }
                              </section>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
</header>
</body>

