@model IEnumerable<BugTracker2.Models.Projects>

@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>
<input type="hidden" name="UserId" id="UserId" value="@ViewBag.UserId" />
<input type="hidden" name="AssignedUserId" id="AssignedUserId" value="@ViewBag.AssignedUserId" />



<table id="mytable" class="data-table-xl hover row-border table-striped compact">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>*@
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>*@
                <td><h5>
                    @Html.ActionLink("Edit", "Edit", "Projects", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, null) |
                    @Html.ActionLink("Create A New Ticket", "Create", "Tickets", new { id = item.Id }, null)
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
               </h5></td>

            </tr>
        }
    </tbody>
</table>
<div>
    <h5>
        @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
        {
            @Html.ActionLink("Create A New Project", "Create", "Projects")
        }
    </h5>
    <h5>
        @Html.ActionLink("Back to Dashboard", "Index", "Home")
    </h5>
    <h5>
        @if (Request.IsAuthenticated && User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
        {
            @Html.ActionLink("Assign Projects To Users", "Index", "Admin")
        }
    </h5>
    <h5>
        @if (Request.IsAuthenticated && User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
            {
            @Html.ActionLink("View All Projects", "FullList", "Projects")
        }
    </h5>
</div>

