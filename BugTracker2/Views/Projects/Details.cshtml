@model BugTracker2.Models.project

@{
    ViewBag.Title = "Details";
}

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.UserId)


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="panel-heading">Project Details</h3>
        </div>
        <!-- /.col-lg-12 -->
        </div>

    <div class="row">
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">26</div>
                            <div>Priority</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">12</div>
                            <div>Status</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">124</div>
                            <div>Type</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">124</div>
                            <div>Attachments</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">13</div>
                            <div>Comments</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-6 text-center">
                            <div class="huge">124</div>
                            <div>Events</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Project: @Html.ActionLink(Model.Title, "Details", "Projects", new { id = Model.Id }, null)</h4>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Description: @Html.ActionLink(Model.Body, "Details", "Projects", new { id = Model.Id }, null)</h4>
                            @using (Html.BeginForm("UserProfile", "Home"))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <input type="hidden" name="ProjectId" value="@Model.Id" />
                                    <h4>
                                        <strong>Assigned to:</strong>
                                        @{ var ProjectUsers = new SelectList(Model.Users, "Id", "FullName"); }
                                        @Html.DropDownList("UserId", ProjectUsers, new { @class = "searchable-select" })
                                    </h4>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="submit" value="UserProfile" name="UserProfile" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                            }
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-offset-1 col-md-5">
                                    <h3>Dates</h3>
                                    <h4><strong>Created on</strong> @Model.Created.ToString("M/d/yyyy")</h4>
                                    @if (Model.Updated.HasValue)
                                    {
                                        <h4 class="text-danger"><strong>Updated on</strong> @Model.Updated.Value.ToString("M/d/yyyy")</h4>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Tickets for this project</h4>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
       
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Title
                                                </th>
                                                <th>
                                                    Date Created
                                                </th>
                                                <th>
                                                    Date Updated
                                                </th>
                                                <th>
                                                    Created By
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                                <th>
                                                    Priority
                                                </th>
                                                <th>
                                                    Type
                                                </th>
                                                <th>
                                                    Assigned To
                                                </th>

                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ticket in Model.Tickets)
                                            {
                                                <tr>
                                                    <td>
                                                        @Model.Title
                                                    </td>
                                                    <td>
                                                        @Model.Created
                                                    </td>
                                                    <td>
                                                        @Model.Updated
                                                    </td>
                                                    <td>
                                                        @ticket.Owner.FullName
                                                    </td>
                                                    <td>
                                                        @ticket.Status.Status
                                                    </td>
                                                    <td>
                                                        @ticket.Priority.Priority
                                                    </td>
                                                    <td>
                                                        @ticket.Type.Type
                                                    </td>
                                                    <td>
                                                        @if (ticket.AssignedUser == null)
                                                        {
                                                            <span class="text-danger">Unassigned</span>
                                                        }
                                                        else
                                                        {
                                                            @ticket.AssignedUser.FullName
                                                        }
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="panel-footer">
                            </div>
                        </div>
                    </div>
                </div>
                <input type="button" class="btn btn-primary btn-lg btn-block" value="Return To Dashboard" onclick="location.href='@Url.Action("Dashboard", "Admin")'" />
                <input type="button" class="btn btn-success btn-lg btn-block" value="Edit Project" onclick="location.href='@Url.Action("Edit", "Projects")'" />
                <input type="button" class="btn btn-social btn-block" value="Back To List" onclick="location.href='@Url.Action("Index", "Projects")'" />
                <input type="button" class="btn btn-warning btn-lg btn-block" value="User Profile" onclick="location.href='@Url.Action("UserProfile", "Home")'" />
            </div>
        </div>
    </div>
</div>











