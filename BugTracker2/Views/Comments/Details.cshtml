@model BugTracker2.Models.Comments

@{
    ViewBag.Title = "Details";
    var ticketsId = ViewBag.TicketsId;
}
<div>
    <h5>
    <input type="button" class="btn btn-primary btn-default" value="Back to list" onclick="location.href='@Url.Action("Index", "Comments")'" />
    </h5>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Comment Details</h4>
            </div>
            <div class="panel-body">
                <div class="col-md-12 subnav">
                        <dl class="dl-horizontal">
                            <dt>
                              Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.User.FullName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TicketsId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TicketsId)
                            </dd>

                            <dt>
                              Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Body)
                            </dd>

                            @*<dt>
                                @Html.DisplayNameFor(model => model.Submitted)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Submitted)
                            </dd>*@

                            @*<dt>
                                @Html.DisplayNameFor(model => model.UpdatedReason)
                            </dt>*@

                            @*<dd>
                                @Html.DisplayFor(model => model.UpdatedReason)
                            </dd>*@

                            <dt>
                                @Html.DisplayNameFor(model => model.Created)
                            </dt>

                            <dd>
                               @String.Format("{0:d}", Model.Created)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Updated)
                            </dt>

                            <dd>
                              @String.Format("{0:d}", Model.Updated)
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

