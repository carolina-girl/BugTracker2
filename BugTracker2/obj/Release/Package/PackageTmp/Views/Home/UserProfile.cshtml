@model BugTracker2.Models.UserViewModel
@{
    ViewBag.Title = "UserProfile";
}
<div>
    <h5>
    <input type="button" class="btn btn-primary btn-default" value="Back To List" onclick="location.href='@Url.Action("Index", "Projects")'" />
    </h5>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>User Profile</h4>
            </div>
            <div class="panel-body">
                <div class="col-md-12 subnav">

                    <div class="col-md-12 subnav">
                        <h4>User Name: @Model.Name</h4>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 content">
                                <h4>Email: <a href="mailto:@Model.Email">@Model.Email</a></h4>

                                <h4>Roles: </h4>
                                <ul>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <li>@role</li>
                                    }
                                </ul>

                                <h4>Assigned to @Model.ProjectCount projects.</h4>
                                @if (Model.Roles.Contains("Submitter"))
                                {
                                    <h4>@Model.Name has submitted @Model.TicketsSubmitted total tickets.</h4>
                                }
                                @if (Model.Roles.Contains("Developer"))
                                {
                                    <h4>@Model.Name is currently assigned @Model.TicketsAssigned tickets. </h4>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




