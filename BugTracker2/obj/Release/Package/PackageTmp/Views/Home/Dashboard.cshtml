@model BugTracker2.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}
<style>
    img {
        border-radius: 50%;
        border: solid black 5px;
    }
    body {
        background-color: lightgrey;
    }
</style>
<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive" src="~/fileUpload/main ladybug.gif" alt="">
                <div class="intro-text">
                    <span class="name">Bug Tracker</span>
                    <hr class="star-light">
                    <span class="skills">Project developed by Mary Ann Burns for Coder Foundry 2016</span>
                </div>
            </div>
        </div>
    </div>
</header>
<h2 class="dashboard" style="margin-left: 600px">Dashboard</h2>
<div class = "container">
    <div class="row">
        <div class="col-md-6 content">
            <h3 class="dashboard" style="margin-left: 350px">Current Projects</h3>
            <h4><table class="table" style="margin-left: 350px">
               @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>@Html.ActionLink(project.Title, "Details", "Projects", new { id = project.Id }, null)</td>
                    </tr>
                }
            </table></h4>
            <p><a href="/Projects" style="margin-left: 350px">View Projects</a> </p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="dashboard">Most Recent Tickets</h3>
                        <h4><table class="table">
                            @foreach (var ticket in Model.Tickets)
                            {
                                <tr>
                                    <td>@Html.ActionLink(ticket.Title, "Details", "Tickets", new { id = ticket.Id }, null)</td>
                                </tr>
                            }
                        </table></h4>
                        <p>
                            <a href="/Tickets">View Tickets</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>




