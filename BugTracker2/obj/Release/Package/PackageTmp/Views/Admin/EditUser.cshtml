@model BugTracker2.Models.AdminUserViewModel
@{
    ViewBag.Title = "EditUser";
}



<h2>Edituser - @Model.User.FirstName @Model.User.LastName</h2>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.User.Id)

    @Html.AntiForgeryToken()

    @Html.ListBox("SelectedRoles", Model.Roles)


    <input type="submit" value="Save" class="btn btn-default" />
}
<h5>
    @Html.ActionLink("Back to Index", "Index", "Admin")
</h5>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').dataTable().columnFilter({
                aoColumns: [
                    { type: "text" },
                    { type: "select", values: ['Admin', 'Project Manager', 'Developer', 'Submitter'] },
                    { type: "text" },
                ]

            });
        });
    </script>
    }