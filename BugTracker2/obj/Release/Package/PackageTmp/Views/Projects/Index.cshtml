@model IEnumerable<BugTracker2.Models.Projects>

@{
    ViewBag.Title = "Index";
}


<h2>Projects</h2>

<p>
    @if (ViewContext.HttpContext.User.IsInRole("Admin,ProjectManagers"))
            {
        @Html.ActionLink("Create", "Create", "Projects")
    }
</p>

<table id="mytable" class="data-table-xl hover row-border table-striped compact">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Users)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Users)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Back to Dashboard", "Index", "Home")
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>

            </tr>
        }
    </tbody>
</table>
    <p>
        @*@if (ViewContext.HttpContext.User.IsInRole("Admin"))*@
        @if (Request.IsAuthenticated && User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
        {
            @Html.ActionLink("Assign Projects To Users", "Index", "Admin")
        }
    </p>
    <p>
        @*@if (ViewContext.HttpContext.User.IsInRole("Admin"))*@
            @if (Request.IsAuthenticated && User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
            {
            @Html.ActionLink("View All Projects", "FullList", "Projects")
        }
    </p>


